<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/close_app"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Close" />

		<Spinner
			android:id="@+id/spinner_patch_names"
			android:layout_width="134dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<Spinner
			android:id="@+id/spinner_UsbDevices"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<TextView
			android:id="@+id/txtviewUsbName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:text="MIDI Device :"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<Spinner
				android:id="@+id/deviceNameSpinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:spinnerMode="dropdown" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:text="(In to Out) :"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<ToggleButton
				android:id="@+id/toggleButtonThru"
				android:layout_width="100dp"
				android:layout_height="50dp"
				android:layout_gravity="top"
				android:textOff="Thru OFF"
				android:textOn="Thru ON" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:text="Cable ID :"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<Spinner
				android:id="@+id/cableIdSpinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:entries="@array/cables"
				android:spinnerMode="dropdown" />

		</LinearLayout>

		<Button
			android:id="@+id/btnAddIns"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="+" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/buttonC"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="0" />

		<Button
			android:id="@+id/buttonCis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="1" />

		<Button
			android:id="@+id/buttonD"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="2" />

		<Button
			android:id="@+id/buttonDis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="3" />

		<Button
			android:id="@+id/buttonE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="4" />

		<Button
			android:id="@+id/buttonF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="5" />

		<Button
			android:id="@+id/buttonFis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="6" />

		<Button
			android:id="@+id/buttonG"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="7" />

		<Button
			android:id="@+id/buttonGis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="8" />

		<Button
			android:id="@+id/buttonA"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="9" />

		<Button
			android:id="@+id/buttonAis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="10" />

		<Button
			android:id="@+id/buttonB"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="11" />

		<Button
			android:id="@+id/buttonC2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="12" />

	</LinearLayout>

	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="MIDI Input"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<ListView
		android:id="@+id/midiInputEventListView"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:stackFromBottom="true"
		android:transcriptMode="alwaysScroll">

	</ListView>

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="MIDI Output"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<ListView
		android:id="@+id/midiOutputEventListView"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:stackFromBottom="true"
		android:transcriptMode="alwaysScroll">

	</ListView>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:orientation="vertical">

		<ScrollView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<LinearLayout
				android:id="@+id/scrollViewInstrum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:orientation="vertical">

			</LinearLayout>

		</ScrollView>

	</LinearLayout>

</LinearLayout>

