<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:seekarc="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/layAppContent"
	android:orientation="vertical"
	tools:context="jp.kshoji.driver.midi.sample.MIDIDriverMultipleSampleActivity">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/layOpenSf"
		android:orientation="horizontal">

		<SeekBar
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:max="1000"
			android:progress="50"
			android:id="@+id/mainSeekBarHallEffect"
			android:layout_gravity="center_vertical"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Keyboard"
			android:id="@+id/btnKeyboardAktivity"/>


	</LinearLayout>


	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/seekbarlayout"
		android:orientation="horizontal">



	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/laydropdownDevices"
		android:visibility="gone">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_weight="1">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:text="MIDI Device :"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

			<Spinner
				android:id="@+id/deviceNameSpinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:spinnerMode="dropdown"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:text="(In to Out) :"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

			<ToggleButton
				android:id="@+id/toggleButtonThru"
				android:layout_width="100dp"
				android:layout_height="50dp"
				android:layout_gravity="top"
				android:textOff="Thru OFF"
				android:textOn="Thru ON"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:text="Cable ID :"
				android:textAppearance="?android:attr/textAppearanceMedium"/>

			<Spinner
				android:id="@+id/cableIdSpinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:entries="@array/cables"
				android:spinnerMode="dropdown"/>

		</LinearLayout>

		<Button
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="+"
			android:layout_gravity="center_vertical|center_horizontal"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/layButtTast"
		android:visibility="gone">

		<Button
			android:id="@+id/buttonC"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="0"
			android:text="C"/>

		<Button
			android:id="@+id/buttonCis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="1"
			/>

		<Button
			android:id="@+id/buttonD"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="2"
			android:text="D"/>

		<Button
			android:id="@+id/buttonDis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="3"/>

		<Button
			android:id="@+id/buttonE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="4"
			android:text="E"/>

		<Button
			android:id="@+id/buttonF"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="5"
			android:text="F"/>

		<Button
			android:id="@+id/buttonFis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="6"/>

		<Button
			android:id="@+id/buttonG"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="7"
			android:text="G"/>

		<Button
			android:id="@+id/buttonGis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="8"/>

		<Button
			android:id="@+id/buttonA"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="9"
			android:text="A"/>

		<Button
			android:id="@+id/buttonAis"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:layout_weight="1"
			android:tag="10"/>

		<Button
			android:id="@+id/buttonB"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="11"
			android:text="H"/>

		<Button
			android:id="@+id/buttonC2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:tag="12"
			android:text="C"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/mainHorzLay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">


		<LinearLayout
			android:layout_width="120dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:id="@+id/llVelocity">

			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="*">

				<TableRow>

					<TextView
						android:id="@+id/txtviewTranspose"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_gravity="center"
						android:layout_weight="1"
						android:gravity="center"
						android:text="Transp" />

				</TableRow>

				<TableRow>

					<Button
						android:id="@+id/btnTransMin12"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_weight="1"
						android:text="-12" />

					<Button
						android:id="@+id/btnTransPlus12"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:layout_weight="1"
						android:text="+12" />

				</TableRow>

				<TableRow>

					<Button
						android:id="@+id/btnTransMin1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_weight="1"
						android:text="-1" />

					<Button
						android:id="@+id/btnTransPlus1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:layout_weight="1"
						android:text="+1" />

				</TableRow>

				<TableRow>

					<Button
						android:id="@+id/btnTrans0"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_weight="1"
						android:text="0" />

				</TableRow>

				<TableRow>

					<Button
						android:id="@+id/btnFixed"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_weight="1"
						android:text="F" />

					<Button
						android:id="@+id/btnSoft"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:layout_weight="1"
						android:text="S" />

				</TableRow>

				<TableRow>

					<SeekBar
						android:id="@+id/seekVelocity"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_weight="1"
						android:progress="70" />

				</TableRow>

				<TableRow>

					<TextView
						android:id="@+id/txtvVelocity"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_weight="1"
						android:gravity="center"
						android:text="global velocity"
						android:textAppearance="?android:attr/textAppearanceSmall" />

				</TableRow>


			</TableLayout>

		</LinearLayout>


		<LinearLayout
			android:id="@+id/layoutForUsbDevices"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="3.5"
			android:orientation="horizontal">

		</LinearLayout>

		<LinearLayout
			android:id="@+id/mainlayDrums"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<Button
				android:id="@+id/btnDrums"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@drawable/rectbtnusbdev"
				android:text="Drums" />

			<GridLayout
				android:id="@+id/layDrums"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"


				android:columnCount="2"
				android:paddingTop="5dp"
				android:rowCount="3">

				<jp.kshoji.driver.midi.sample.util.InstrumentButton
					android:id="@+id/drum1"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:layout_margin="10dp"
					android:background="@drawable/draw_drums1"
					android:text="1"
					android:textColor="#0B0A0A" />

				<jp.kshoji.driver.midi.sample.util.InstrumentButton
					android:id="@+id/drum2"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:layout_margin="10dp"
					android:background="@drawable/draw_drums2"
					android:text="2"
					android:textColor="#0B0A0A"/>

				<jp.kshoji.driver.midi.sample.util.InstrumentButton
					android:id="@+id/drum3"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:layout_margin="10dp"
					android:background="@drawable/draw_drums3"
					android:text="3"
					android:textColor="#0B0A0A"/>

				<jp.kshoji.driver.midi.sample.util.InstrumentButton
					android:id="@+id/drum4"
					android:layout_width="80dp"
					android:layout_height="80dp"
					android:layout_margin="10dp"
					android:background="@drawable/draw_drums4"
					android:text="4"
					android:textColor="#0B0A0A"/>

			</GridLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

